<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".VentaActivity"
    android:background="@drawable/fondo_degradado">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Venta"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etfecha"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="20dp"
        android:gravity="center"
        android:hint="Fecha AAAA/MM/DD"
        android:textColorHint="@color/white"
        android:inputType="text" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
2
    <EditText
        android:id="@+id/etcodigo"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginTop="3dp"
        android:textSize="20dp"
        android:gravity="center"
        android:hint="Codigo"
        android:textColorHint="@color/white"
        android:inputType="text" />

    <Button
        android:id="@+id/btnconsultarcodigo"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:onClick="Consultar"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="7dp"
        android:text="Consultar"
        android:textSize="18dp"
        android:backgroundTint="@color/boton"
        app:cornerRadius="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        2
        <EditText
            android:id="@+id/etidentificacion"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:gravity="center"
            android:hint="Identificacion"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <Button
            android:id="@+id/btnconsultaridentificacion"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:onClick="ConsultarCliente"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="7dp"
            android:text="Consultar"
            android:textSize="18dp"
            android:backgroundTint="@color/boton"
            app:cornerRadius="25dp"/>

    </LinearLayout>



    <EditText
        android:id="@+id/etnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20dp"
        android:gravity="center"

        android:hint="Nombre"
        android:textColorHint="@color/white"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        2
        <EditText
            android:id="@+id/etplaca"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:gravity="center"
            android:hint="Placa"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <Button
            android:id="@+id/btnconsultarplaca"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:onClick="ConsultarPlaca"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="7dp"
            android:text="Consultar"
            android:textSize="18dp"
            android:backgroundTint="@color/boton"
            app:cornerRadius="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        2
        <EditText
            android:id="@+id/etmarca"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:gravity="center"
            android:hint="Marca"
            android:textColorHint="@color/white"
            android:inputType="text" />

        <EditText
            android:id="@+id/etmodelo"
            android:layout_width="225dp"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_marginTop="3dp"
            android:textSize="20dp"
            android:gravity="center"
            android:hint="Modelo"
            android:textColorHint="@color/white"
            android:inputType="number" />

    </LinearLayout>


    <CheckBox
        android:id="@+id/cbactivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:enabled="false"
        android:layout_marginLeft="10dp"
        android:text=" Activo"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button40"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="Guardar"
            android:text="Guardar"
            android:textSize="18dp"
            android:backgroundTint="@color/boton"
            app:cornerRadius="25dp"/>

        <Button
            android:id="@+id/btnbuscar"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:text="Buscar"
            android:textSize="18dp"
            android:backgroundTint="@color/boton"
            app:cornerRadius="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnlimpiar"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="limpiar_campos"
            android:text="Limpiar"
            android:textSize="18dp"
            android:backgroundTint="@color/boton"
            app:cornerRadius="25dp"/>

        <Button
            android:id="@+id/btnanular"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:text="Anular"
            android:textSize="18dp"
            android:backgroundTint="@color/boton"
            app:cornerRadius="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button49"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="Regresar"
            android:text="Regresar"
            android:textSize="18dp"
            android:backgroundTint="@color/boton"
            app:cornerRadius="25dp"/>

    </LinearLayout>





</LinearLayout>